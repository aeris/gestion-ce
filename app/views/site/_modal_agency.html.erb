<div id="modal-agency" class="modal hide fade">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h3><%= t 'Create agency' %></h3>
	</div>
	<%= form_for Agency.new, builder: BootstrapFormPrependBuilder do |f| %>
		<div class="modal-body">
			<%= f.text_field_prepend 'icon-home', :name, placeholder: t('Name'), required: true %>
		</div>
		<div class="modal-footer">
			<%= f.submit t('Create'), class: %w(btn btn-primary) %>
			<button class="btn btn-danger" data-dismiss="modal" aria-hidden="true"><%= t 'Close' %></button>
		</div>
	<% end %>
</div>

<div id="modal-user" class="modal hide fade">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h3><%= t 'Create user' %></h3>
	</div>
	<%= form_for User.new, builder: BootstrapFormPrependBuilder do |f| %>
		<div class="modal-body">
			<%= f.text_field_prepend 'icon-user', :name, placeholder: t('Name'), required: true %>
			<%= f.text_field_prepend 'icon-user', :surname, placeholder: t('Surname'), required: true %>
			<%= f.text_field_prepend 'icon-lock', :password, placeholder: t('Password'), required: true %>
			<%= f.select :agency, Agency.all.collect { |a| [a.name, a.id] } %>
		</div>
		<div class="modal-footer">
			<%= f.submit t('Create'), class: %w(btn btn-primary) %>
			<button class="btn btn-danger" data-dismiss="modal" aria-hidden="true"><%= t 'Close' %></button>
		</div>
	<% end %>
</div>
